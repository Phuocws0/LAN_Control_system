<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lancontrol.server.gui.ProcessController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <Label text="Quản lý Tiến trình (Process Manager)">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <TableView fx:id="processTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="pidCol" prefWidth="80.0" text="PID" />
                <TableColumn fx:id="nameCol" prefWidth="250.0" text="Tên tiến trình" />
                <TableColumn fx:id="cpuCol" prefWidth="100.0" text="CPU (%)" />
                <TableColumn fx:id="memCol" prefWidth="120.0" text="Memory (MB)" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onRefresh" prefHeight="30.0" prefWidth="100.0" text="Làm mới" />
                <Button mnemonicParsing="false" onAction="#onKillProcess" prefHeight="30.0" prefWidth="130.0" style="-fx-background-color: #ff4444; -fx-text-fill: white;" text="Kết thúc (Kill)" />
            </children>
        </HBox>
    </children>
</VBox>