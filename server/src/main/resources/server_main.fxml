<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="Hệ thống">
                    <items>
                        <MenuItem text="Cài đặt" />
                        <MenuItem text="Thoát" />
                    </items></Menu>
                <Menu text="Quản lý nhóm">
                    <items>
                        <MenuItem onAction="#onAddGroup" text="Thêm nhóm mới" />
                    </items></Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox prefWidth="220.0" spacing="10.0" style="-fx-background-color: #eeeeee; -fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-weight: bold; -fx-font-size: 13px;" text="Danh sách nhóm" />
                <VBox fx:id="groupContainer" spacing="5.0" />
                <Separator />
                <Label style="-fx-font-weight: bold; -fx-font-size: 13px;" text="Máy đang hoạt động" />
                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="deviceListContainer" spacing="3.0" />
                    </content>
                </ScrollPane>
            </children>
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
        </VBox>
    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #ffffff;" BorderPane.alignment="CENTER">
            <content>
                <GridPane fx:id="myGrid" hgap="20.0" vgap="20.0">
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    <right>
        <VBox prefWidth="240.0" spacing="15.0" style="-fx-background-color: #fcfcfc; -fx-border-color: #cccccc; -fx-border-width: 0 0 0 1;" BorderPane.alignment="CENTER">
            <children>
                <Label style="-fx-font-weight: bold; -fx-font-size: 15px; -fx-text-fill: #333333;" text="THÔNG TIN CHI TIẾT" />

                <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 12; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;">
                    <children>
                        <Label fx:id="nameLabel" style="-fx-font-weight: bold; -fx-text-fill: #0078d7;" text="Name: --" />
                        <Label fx:id="ipLabel" text="IP: --" />
                        <Label fx:id="macLabel" style="-fx-font-size: 11px; -fx-text-fill: #888888;" text="MAC: --" />

                        <Separator />

                        <Label fx:id="osLabel" text="OS: --" wrapText="true"/>
                        <Label fx:id="cpuModelLabel" text="Core: --" wrapText="true"/>
                        <Label fx:id="ramTotalLabel" text="Total RAM: --" />
                        <Label fx:id="diskTotalLabel" text="Total Disk: --" />
                        <Separator />
                        <Label style="-fx-font-weight: bold; -fx-font-size: 11px;" text="TRẠNG THÁI HIỆN TẠI" />
                        <Label fx:id="cpuLabel" text="CPU: --" />
                        <Label fx:id="ramLabel" text="RAM: --" />
                        <Label fx:id="diskLabel" text="DISK: --" />
                        <Label fx:id="networkLabel" text="NET: --" />
                    </children>
                </VBox>

                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Điều khiển nhanh" />
                        <Button maxWidth="Infinity" onAction="#onSendFileClick" style="-fx-cursor: hand;" text="Gửi tập tin" />
                        <Button maxWidth="Infinity" onAction="#onFileExplorerClick" style="-fx-cursor: hand;" text="Quản lý tệp tin" />
                        <Button maxWidth="Infinity" onAction="#onProcessClick" style="-fx-cursor: hand;" text="Quản lý tiến trình" />
                        <Button maxWidth="Infinity" onAction="#onControlClick" style="-fx-cursor: hand;" text="Điều khiển từ xa" />
                        <Button maxWidth="Infinity" onAction="#onSleepClick" style="-fx-cursor: hand;" text="Chế độ ngủ" />
                        <Button maxWidth="Infinity" onAction="#onShutdownClick" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="TẮT MÁY" />
                    </children>
                </VBox>
            </children>
            <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
        </VBox>
    </right>
</BorderPane>