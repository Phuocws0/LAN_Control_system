<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="5.0" style="-fx-background-color: #2b2b2b;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lancontrol.server.gui.ScreenController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #3c3f41;">
            <children>
                <Label fx:id="statusLabel" text="Đang kết nối..." textFill="WHITE" style="-fx-font-weight: bold;" />
                <Label fx:id="fpsLabel" text="FPS: 0" textFill="#00ff00" />
                <HBox HBox.hgrow="ALWAYS" />
                <Button onAction="#onRefresh" text="Làm mới" />
                <Button fx:id="controlBtn" onAction="#onToggleControl" text="Bật điều khiển" style="-fx-background-color: #4a90e2; -fx-text-fill: white;" />
            </children>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </HBox>

        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" style="-fx-background: #1e1e1e; -fx-border-color: #1e1e1e;" VBox.vgrow="ALWAYS">
            <content>
                <ImageView fx:id="screenView" pickOnBounds="true" preserveRatio="true" />
            </content>
        </ScrollPane>
    </children>
</VBox>